{{define "blog/atom"}}<?xml version='1.0' encoding='UTF-8'?>
<feed xmlns='http://www.w3.org/2005/Atom'>
  <id>tag:manveru.name,2011:blog</id>
  <updated>{{xmlTime .Updated}}</updated>
  <title type='text'>manveru</title>
  <link rel='alternate' type='text/html' href='http://manveru.name/blog'/>
  <link rel='self' type='application/atom+xml' href='http://manveru.name/blog/atom.atom'/>
  <author>
    <name>Michael 'manveru' Fellinger</name>
  </author>
  <generator version="2012.04" uri="http://github.com/manveru/manveru.name">homepage.go</generator>
  {{range .Posts}}
    <entry>
      <id>tag:manveru.name,2011:blog,{{date .Created}}</id>
      <published>{{xmlTime .Created}}</published>
      <updated>{{xmlTime .Updated}}</updated>
      <author><name>Michael 'manveru' Fellinger</name></author>
      <title type="text">{{.Title}}</title>
      <content type="html">{{string .Content}}</content>
    </entry>
  {{end}}
</feed>{{end}}
